modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Notion Translator Server"

[[workflows.workflow]]
name = "Notion Translator Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=app.py FLASK_ENV=development flask run --host=0.0.0.0 --port=5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "FLASK_APP=app.py FLASK_ENV=development flask run --host=0.0.0.0 --port=5000"]

[[ports]]
localPort = 5000
externalPort = 80
